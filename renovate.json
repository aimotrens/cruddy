{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "rangeStrategy": "pin",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "addLabels": [
                "automerge"
            ],
            "ignoreTests": true
        }
    ]
}